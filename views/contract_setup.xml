                    <notebook>
                        <page string="WORKING TIME">
                            <field name="working_time">
                                <tree editable="bottom">
                                    <field name="sequence" widget="handle" />
                                    <field name="name" />
                                    <field name="day_type"/>
                                    <field name="dayofweek" />
                                    <field name="hour_from" />
                                    <field name="hour_to" />
                                    <field name="break_hours" />
