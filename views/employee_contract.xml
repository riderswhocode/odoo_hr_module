<odoo>
    <data>

        <record id="view_employee_contract_filter" model="ir.ui.view">
         <field name="name">hr_china.employee_contract.filter</field>
         <field name="model">hr_china.employee_contract</field>
         <field name="arch" type="xml">
             <search string="Employee Contracts">
                 <filter string="Active" name="is_active" domain="[('is_active', '=', True)]"/>
                 <separator/>
                 <field string="Employee" name="employee_id"/>
                 <field string="Contract Year" name="contract_year"/>
                 <group expand="0" string="Group By">
                     <filter string="Employee" name="employee_id" context="{'group_by':'employee_id'}"/>
                 </group>
             </search>
         </field>
        </record>

        <record id="view_hr_china_contract_list" model="ir.ui.view">
            <field name="name">hr_china.contract_list.tree</field>
            <field name="model">hr_china.employee_contract</field>
            <field name="arch" type="xml">
                <tree create="false" delete="false" edit="false">
                    <field name="employee_id"/>
                    <field name="wage_type"/>
                    <field name="currency_id"/>
                    <field name="payment_method"/>
                    <field name="start_date" widget="date"/>
                    <field name="end_date" widget="date"/>
                    <field name="is_active"/>
                    <field name="contract_year" invisible="1"/>
                </tree>
            </field>
        </record>

        <record id="action_view_hr_china_contract" model="ir.actions.act_window">
            <field name="name">Contract</field>
            <field name="res_model">hr_china.employee_contract</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="hr_china.view_hr_china_contract_list"/>
        </record>

        <record id="hr_china_employee_contract_tree" model="ir.ui.view">
            <field name="name">view.employee_contracts.tree</field>
            <field name="model">hr_china.contract</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="start_date" widget="date"/>
                    <field name="end_date" widget="date"/>
                </tree>
            </field>
        </record>

        <record id="moddal_hr_china_employee_contracts_form" model="ir.ui.view">
            <field name="name">view.modal_employee_contracts.form</field>
            <field name="model">hr_china.employee_contract</field>
            <field name="arch" type="xml">
                <form string="Contract" >
                    <sheet>
                        <group>
                            <h1 style="width:50%%">
                                <field name="name"/>
                            </h1>
                        </group>
                        <field name="converted_wage_type" invisible="1"/>
                        <field name="employee_id" invisible="1"/>
                        <field name="contract_year" invisible="1"/>
                        <group>
                            <group string="General:">
                                <field name="contract_template_id" required="1"/>
                                <label for="wage_type" string="Wage Type:"/>
                                <div class="o_row">
                                    <field name="wage_type" />
                                </div>

                                <label for="currency_id" string="Currency:"/>
                                <div class="o_row">
                                    <field name="currency_id" />
                                </div>
                                <label for="payment_method" string="Payment Method"/>
                                <div class="o_row">
                                    <field name="payment_method" />
                                </div>
                            </group>
                            <group style="width:50%%">
                                <field name="start_date" widget="date" required="1"/>
                                <field name="end_date" widget="date" required="1"/>
                                <field name="is_active"/>
                                <field name="allowed_leave"/>
                            </group>
                            <group attrs="{'invisible': [('converted_wage_type', '=', 'hourly')]}">
                                <div class="o_row">
                                    <label for="monthly_fee" string="Monthly Fee"/>
                                    <span class="so_information_button">
                                        <field name="monthly_fee_info" widget="show_info_hr_cn" options="{'text': 'Monthly fixed rate'}"/>
                                    </span>
                                </div>
                                <field name="monthly_fee" nolabel="1" widget="monetary"/>

                                <div class="o_row">
                                    <label for="dayoff_deduction" string="Days Off Deduction"/>
                                    <span class="so_information_button">
                                        <field name="dayoff_deduction_info" widget="show_info_hr_cn" options="{'text': 'Rate by day to be deducted if absent'}"/>
                                    </span>
                                </div>
                                <field name="dayoff_deduction" nolabel="1" widget="monetary"/>
                            </group>

                            <group attrs="{'invisible': [('converted_wage_type', '=', 'hourly')]}"></group>
                            <group string="Weekdays Rate:" attrs="{'invisible': [('converted_wage_type', '=', 'monthly')]}">

                                <div class="o_row">
                                    <label for="hourly_rate" string="Hourly Rate"/>
                                    <span class="so_information_button">
                                        <field name="weekday_hourly_rate_info" widget="show_info_hr_cn" options="{'text': 'Hourly rate weekdays'}"/>
                                    </span>
                                </div>
                                <field name="hourly_rate" nolabel="1" widget="monetary"/>


                                <div class="o_row">
                                    <label for="weekday_daily_fee" string="Daily Fee"/>
                                    <span class="so_information_button">
                                        <field name="weekday_daily_fee_info" widget="show_info_hr_cn" options="{'text': 'The daily rate of the employee (e.i, if hourly rate is 10 multiplied by 8 hours. Daily fee is 80.00)'}"/>
                                    </span>
                                </div>
                                <field name="weekday_daily_fee" nolabel="1" widget="monetary"/>


                                <div class="o_row">
                                    <label for="weekday_overtime_fee" string="Overtime Fee"/>
                                    <span class="so_information_button">
                                        <field name="weekday_ot_fee_info" widget="show_info_hr_cn" options="{'text': 'Overtime rate per hour on Regular Days (Monday - Friday)'}"/>
                                    </span>
                                </div>
                                <field name="weekday_overtime_fee" nolabel="1" widget="monetary"/>
                            </group>
                            <group attrs="{'invisible': [('converted_wage_type', '=', 'monthly')]}"></group>
                            <group string="Weekends Rate:" attrs="{'invisible': [('converted_wage_type', '=', 'monthly')]}">

                                <div class="o_row">
                                    <label for="weekends_fee" string="Hourly Rate"/>
                                    <span class="so_information_button">
                                        <field name="weekend_hourly_rate_info" widget="show_info_hr_cn" options="{'text': 'Hourly rate of the employee during weekends'}"/>
                                    </span>
                                </div>
                                <field name="weekends_fee" nolabel="1" widget="monetary"/>


                                <div class="o_row">
                                    <label for="weekends_daily_fee" string="Daily Fee"/>
                                    <span class="so_information_button">
                                        <field name="weekend_daily_fee_info" widget="show_info_hr_cn" options="{'text': 'The daily rate of the employee during weekends. It will be equivalent to the hourly rate multiplied by the regular work hours'}"/>
                                    </span>
                                </div>
                                <field name="weekends_daily_fee" nolabel="1" widget="monetary"/>
                            </group>
                            <group attrs="{'invisible': [('converted_wage_type', '=', 'monthly')]}"></group>
                            <group string="Holiday Rate:" attrs="{'invisible': [('converted_wage_type', '=', 'monthly')]}">

                                <div class="o_row">
                                    <label for="holiday_fee" string="Hourly Rate"/>
                                    <span class="so_information_button">
                                        <field name="holiday_fee_info" widget="show_info_hr_cn" options="{'text': 'Special rate is given during holidays'}"/>
                                    </span>
                                </div>
                                <field name="holiday_fee" nolabel="1" widget="monetary"/>


                                <div class="o_row">
                                    <label for="holiday_daily_fee" string="Daily Fee"/>
                                    <span class="so_information_button">
                                        <field name="holiday_daily_fee_info" widget="show_info_hr_cn" options="{'text': 'The total rate of an employee when they work on holiday'}"/>
                                    </span>
                                </div>
                                <field name="holiday_daily_fee" nolabel="1" widget="monetary"/>
                            </group>
                            <group></group>
                        </group>
                        <notebook>
                            <page string="WORKING TIME">
                                <field name="working_time" mode="tree">
                                    <tree editable="bottom">
                                        <field name="name" />
                                        <field name="day_type"/>
                                        <field name="dayofweek" />
                                        <field name="hour_from"/>
                                        <field name="hour_to" />
                                        <field name="break_hours" />
                                    </tree>
                                </field>
                            </page>
                            <page string="BENEFITS">
                                <field name="benefits_id" mode="tree">
                                    <tree editable="bottom">
                                        <field name="benefits_id"/>
                                        <field name="benefit_type"/>
                                        <field name="amount" widget="monetary" options="{'currency_field': 'currency'}"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="DEDUCTIONS">
                                <field name="deductions_id" mode="tree">
                                    <tree editable="bottom">
                                        <field name="deductions_id"/>
                                        <field name="deduction_type"/>
                                        <field name="amount" widget="monetary" options="{'currency_field': 'currency'}" />
                                    </tree>
                                </field>
                            </page>
                            <page string="OTHER INFORMATION">
                                <group>
                                    <field name="other_info"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="hr_china_employee_contracts_form" model="ir.ui.view">
            <field name="name">view.employee_contracts.form</field>
            <field name="model">hr_china.contract</field>
            <field name="arch" type="xml">
                <form string="Contract" edit="0">
                    <sheet>
                        <h1 style="width:50%%"><field name="name" readonly="1"/></h1>
                        <field name="employee_id" invisible="1"/>
                        <group style="width:50%%">
                            <field name="wage_type" readonly="1"/>
                            <field name="holiday_fee" readonly="1"/>
                            <field name="dayoff_deduction" readonly="1"/>
                            <field name="start_date" widget="date" readonly="1"/>
                            <field name="end_date" widget="date" readonly="1"/>
                        </group>
                        <group style="width:50%%">
                            <field name="monthly_fee" widget="monetary" readonly="1"/>
                            <field name="weekday_daily_fee" widget="monetary" readonly="1"/>
                            <field name="weekday_overtime_fee" widget="monetary" readonly="1"/>
                            <field name="weekend_overtime_fee" widget="monetary" readonly="1"/>
                            <field name="weekends_fee" widget="monetary" readonly="1"/>
                        </group>
                        <notebook>
                            <page string="WORKING TIME">
                                <field name="working_time">
                                    <tree create="false" delete="false" edit="false">
                                        <field name="name" />
                                        <field name="day_type"/>
                                        <field name="dayofweek" />
                                        <field name="hour_from"/>
                                        <field name="hour_to" />
                                        <field name="break_hours" />
                                    </tree>
                                </field>
                            </page>
                            <page string="BENEFITS">
                                <field name="benefits_id" mode="tree">
                                    <tree >
                                        <field name="benefits_id"/>
                                        <field name="benefit_type"/>
                                        <field name="amount" widget="monetary" options="{'currency_field': 'currency'}"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="DEDUCTIONS">
                                <field name="deductions_id" mode="tree">
                                    <tree >
                                        <field name="deductions_id"/>
                                        <field name="deduction_type"/>
                                        <field name="amount" widget="monetary" options="{'currency_field': 'currency'}" />
                                    </tree>
                                </field>
                            </page>
                            <page string="OTHER INFORMATION">
                                <group>
                                    <field name="other_info" readonly="1"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="hr_china_employee_benefits_form" model="ir.ui.view">
            <field name="name">view.employee_benefits.form</field>
            <field name="model">hr_china.employee_benefits</field>
            <field name="arch" type="xml">
                <form string="Benefits">
                    <sheet>
                        <group style="width:50%%">
                            <field name="benefits_id" />
                            <field name="benefit_type" />
                            <field name="amount" />
                            <field name="currency" widget="selection" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="hr_china_employee_deductions_form" model="ir.ui.view">
            <field name="name">view.employee_deductions.form</field>
            <field name="model">hr_china.employee_deductions</field>
            <field name="arch" type="xml">
                <form string="Benefits">
                    <sheet>
                        <group style="width:50%%">
                            <field name="deductions_id" />
                            <field name="deduction_type" />
                            <field name="amount" />
                            <field name="currency" widget="selection" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="hr_china_employee_working_time_form" model="ir.ui.view">
            <field name="name">view.employee_working_time.form</field>
            <field name="model">hr_china.employee_working_time</field>
            <field name="arch" type="xml">
                <form string="Benefits">
                    <sheet>
                        <group style="width:50%%">
                            <field name="name" />
                            <field name="day_type"/>
                            <field name="dayofweek" />
                            <field name="hour_from" widget="timepicker"/>
                            <field name="hour_to" widget="timepicker"/>
                            <field name="break_hours" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>