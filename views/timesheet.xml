<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <record id="open_hr_china_timesheets" model="ir.actions.act_window">
            <field name="name">Timesheets</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr_china.timesheet</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="zulu_attendance_timesheet_create_form" model="ir.ui.view">
            <field name="name">view.timesheet_create.form</field>
            <field name="model">zulu_attendance.timesheet.create</field>
            <field name="arch" type="xml">
                <form string="Timesheets">
                    <sheet>
                        <div class="oe_edit_only" style="padding-bottom: 50px;">
                            <label for="total_days" string="Timesheet Period"/>
                            <field name="start_date" class="oe_inline" required="1"  widget="date"/>
                            <label string=" to " class="oe_inline"/>
                            <field name="end_date" class="oe_inline" required="1"  widget="date"/>
                        </div>
                        <field name="employee_ids" class="oe_edit_only">
                            <tree editable="bottom" create="true">
                                <field name="name" string="Employee"/>
                                <field name="categ_id" string="Working Time"/>
                                <field name="job_id" string="Job Title"/>
                                <field name="department_id" string="Department"/>
                            </tree>
                        </field>
                        <footer>
                            <button string="Create" name="close_dialog" type="object" class="btn-primary"/>
                            <button string="Discard" class="btn-default" special="cancel"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_hr_china_timesheet_tree" model="ir.ui.view">
            <field name="name">hr_china_timesheet.tree</field>
            <field name="model">hr_china.timesheet</field>
            <field name="arch" type="xml">
                <tree string="Timesheets">
                    <field name="employee_id" />
                    <field name="job_title_id" />
                    <field name="department_id" />
                    <field name="period_from" widget="date"/>
                    <field name="period_to" widget="date"/>
                    <field name="regular_days" string="Total Days" />
                    <field name="state" invisible="1"/>
                    <field name="timesheet_state" widget="tree_html"/>
                </tree>
            </field>
        </record>

        <record id="hr_china_timesheet_create_form" model="ir.ui.view">
            <field name="name">view.hr_china_timesheet_create.form</field>
            <field name="model">hr_china.timesheet.create</field>
            <field name="arch" type="xml">
                <form string="Timesheets">
                    <sheet>
<!--                        <div class="oe_edit_only" style="padding-bottom: 50px;">-->
<!--                            <label for="total_days" string="Timesheet Period"/>-->
<!--                            <field name="start_date" class="oe_inline" required="1" widget="date"/>-->
<!--                            <label string=" to " class="oe_inline"/>-->
<!--                            <field name="end_date" class="oe_inline" required="1" widget="date"/>-->
<!--                        </div>-->
                        <field name="employee_ids" class="oe_edit_only">
                            <tree editable="bottom" create="true">
                                <field name="name" string="Employee"/>
                                <field name="job_id" string="Job Title"/>
                                <field name="department_id" string="Department"/>
                            </tree>
                        </field>
                        <footer>
                            <button string="Create" name="close_dialog" type="object" class="btn-primary"/>
                            <button string="Discard" class="btn-default" special="cancel"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="hr_china_timesheet_create_temp" model="ir.ui.view">
            <field name="name">view.hr_china_timesheet_create.temp</field>
            <field name="model">hr_china.timesheet.create_temp</field>
            <field name="arch" type="xml">
                <form string="Timesheets">
                    <sheet>
                        <div class="oe_edit_only" style="padding-bottom: 50px;">
                            <label for="total_days" string="Timesheet Period"/>
                            <field name="period_from" class="oe_inline" required="1" widget="date"/>
                            <label string=" to " class="oe_inline"/>
                            <field name="period_to" class="oe_inline" required="1" widget="date"/>
                        </div>
                        <footer>
                            <button string="Create" name="close_dialog" type="object" class="btn-primary"/>
                            <button string="Discard" class="btn-default" special="cancel"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_zulu_hr_timesheet_filter" model="ir.ui.view">
            <field name="name">zulu_hr.timesheet.select</field>
            <field name="model">hr_china.timesheet</field>
            <field name="arch" type="xml">
                <search string="Search Timesheets">
                    <field name="name" string="Employee" filter_domain="['|',('name','ilike',self)]"/>
                    <field name="employee_id"/>
                    <group expand="0" string="Group By">
                        <filter string="Employees" name="employee_id" context="{'group_by':'employee_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="hr_china_timesheet_form" model="ir.ui.view">
            <field name="name">hr_china_timesheet.form</field>
            <field name="model">hr_china.timesheet</field>
            <field name="arch" type="xml">
                <form string="Timesheets">
                    <header>
                        <button string="Confirm" name="action_confirm" states="draft" type="object" class="oe_highlight" />
                        <button string="Approve" name="action_approve" states="draft,confirm" type="object" class="oe_highlight"/>
                        <button string="Set as Draft" name="action_draft" states="validate,confirm" type="object" />
                        <button string="Update Timesheet" name="action_update_timesheet" states="draft,validate,confirm" type="object"/>
                        <button string="Multiple Update" name="action_update_multiple" states="draft,validate,confirm" type="object"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirm,validate"/>
                    </header>
                    <field name="contract_type" invisible="1"/>
                    <field name="converted_wage_type" invisible="1"/>
                    <sheet>
                        <div><h1><field name="name"/></h1></div>
                        <group style="width:50%%">
                            <field name="department_id" />
                            <field name="job_title_id" />
                            <field name="period_from" widget="date"/>
                            <field name="period_to" widget="date"/>
                        </group>
                        <group string="Total (days)" style="width:50%%">
                            <field name="weekdays_day" attrs="{'invisible': [('converted_wage_type', '=', 'hourly')]}" />
                            <field name="work_time" attrs="{'invisible': [('converted_wage_type', '=', 'monthly')]}"/>
                            <field name="weekday_ot_hours" />
                            <field name="weekends_day" attrs="{'invisible': [('converted_wage_type', '=', 'hourly')]}" />
                            <field name="work_time_weekend" attrs="{'invisible': [('converted_wage_type', '=', 'monthly')]}"/>
                            <field name="weekend_ot_hours" />
                            <field name="holiday_work_time" string="Holiday Work Time" attrs="{'invisible': [('converted_wage_type', '=', 'monthly')]}"/>
                            <field name="holiday_work_day" attrs="{'invisible': [('converted_wage_type', '=', 'hourly')]}"/>
                        </group>
                        <field name="attendance_trans">
                            <tree create="false">
                                <field name="date" widget="date" />
                                <field name="day" />
                                <field name="check_in_am" widget="time" />
                                <field name="check_out_am" widget="time" />
                                <field name="break_hours" />
                                <field name="check_in_pm" widget="time" />
                                <field name="check_out_pm" widget="time" />
                                <field name="work_hours" />
                                <field name="overtime_hours" />
                            </tree>
                        </field>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="hr_china_timesheet_trans_frm" model="ir.ui.view">
            <field name="name">view.hr_china_timesheet_trans.form</field>
            <field name="model">hr_china.timesheet.trans</field>
            <field name="arch" type="xml">
                <form string="Attendance">
                    <sheet>
                        <group>
                            <field name="timesheet" readonly="1"/>
                            <field name="day" />
                            <field name="date" widget="date" readonly="1" />
                        </group>
                        <group></group>
                        <group style="width:50%%">
                            <field name="check_in_am" widget="time" />
                            <field name="check_in_pm" widget="time" />
                        </group>
                        <group style="width:50%%">
                            <field name="check_out_am" widget="time" />
                            <field name="check_out_pm" widget="time" />
                        </group>
                        <button name="put_date" type="object" string="Set Date" class="btn btn-primary"/>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="hr_china_timesheet_trans_multiple" model="ir.ui.view">
            <field name="name">view.hr_china_timesheet_trans.multiple</field>
            <field name="model">hr_china.timesshet_multiple</field>
            <field name="arch" type="xml">
                <form string="Multiple Attendance">
                    <sheet>
                        <field name="timesheet_id" context="default_timesheet_id" invisible="1"/>
                        <group string="Use this form to update multiple days on the timesheet">
                            <group style="width:50%%">
                                <field name="start_date"/>
                                <field name="end_date"/>
                            </group>
                            <group style="width:50%%"></group>
                            <group style="width:50%%">
                                <field name="check_in_am" widget="float_time"/>
                                <field name="check_in_pm" widget="float_time" />
                            </group>
                            <group>
                                <field name="check_out_am" widget="float_time"/>
                                <field name="check_out_pm" widget="float_time"/>
                            </group>
                            <group style="width:50%%" string="Apply a selection to the following work days">
                            <field name="apply_weekday"/>
                            <field name="apply_weekend"/>
                        </group>
                        </group>
                        <footer>
                            <button string="Update" name="close_dialog" type="object" class="btn-primary"/>
                            <button string="Discard" class="btn-default" special="cancel"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>