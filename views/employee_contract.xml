<odoo>
    <data>

        <record id="hr_china_employee_contract_tree" model="ir.ui.view">
            <field name="name">view.employee_contracts.tree</field>
            <field name="model">hr_china.contract</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="start_date" widget="date"/>
                    <field name="end_date" widget="date"/>
                </tree>
            </field>
        </record>

        <record id="moddal_hr_china_employee_contracts_form" model="ir.ui.view">
            <field name="name">view.modal_employee_contracts.form</field>
            <field name="model">hr_china.employee_contract</field>
            <field name="arch" type="xml">
                <form string="Contract" >
                    <sheet>
                        <group>
                            <h1 style="width:50%%">
                                <field name="name"/>
                            </h1>
                        </group>
                        <field name="converted_wage_type" invisible="1" />
                        <group>
                            <group string="General:">
                                <field name="contract_template_id" required="1"/>
                                <label for="c_wage_type" string="Wage Type:"/>
                                <div class="o_row">
                                    <field name="wage_type" />
                                </div>
                                <label for="currency_id" string="Currency:"/>
                                <div class="o_row">
                                    <field name="currency_id" />
                                </div>
                                <label for="payment_method" string="Payment Method"/>
                                <div class="o_row">
                                    <field name="payment_method" />
                                </div>
                            </group>
                            <group style="width:50%%">
                                <field name="start_date" widget="date" required="1"/>
                                <field name="end_date" widget="date" required="1"/>
                                <field name="is_active"/>
                                <field name="enable_allowed_leave" invisible="1"/>
                                <field name="allowed_leave" attrs="{'invisible': [('enable_allowed_leave', '=', False)]}"/>
                            </group>
                            <group attrs="{'invisible': [('converted_wage_type', '=', 'hourly')]}">
                                <label for="monthly_fee" string="Monthly Fee"/>
                                <div class="o_row">
                                    <field name="monthly_fee" widget="monetary"/>
                                </div>
                                <label for="dayoff_deduction" string="Days Off Deduction"/>
                                <div class="o_row">
                                    <field name="dayoff_deduction" widget="monetary"/>
                                </div>
                            </group>
                            <group attrs="{'invisible': [('converted_wage_type', '=', 'hourly')]}"></group>
                            <group string="Weekdays Rate:" attrs="{'invisible': [('converted_wage_type', '=', 'monthly')]}">
                                <label for="hourly_rate" string="Hourly Rate"/>
                                <div class="o_row">
                                    <field name="hourly_rate" widget="monetary"/>
                                </div>
                                <label for="weekday_daily_fee" string="Daily Fee"/>
                                <div class="o_row">
                                    <field name="weekday_daily_fee" widget="monetary"/>
                                </div>
                                <label for="weekday_overtime_fee" string="Overtime Fee"/>
                                <div class="o_row">
                                    <field name="weekday_overtime_fee" widget="monetary"/>
                                </div>
                            </group>
                            <group attrs="{'invisible': [('converted_wage_type', '=', 'monthly')]}"></group>
                            <group string="Weekends Rate:" attrs="{'invisible': [('converted_wage_type', '=', 'monthly')]}">
                                <label for="weekends_fee" string="Hourly Rate"/>
                                <div class="o_row">
                                    <field name="weekends_fee" widget="monetary"/>
                                </div>
                                <label for="weekends_daily_fee" string="Daily Fee"/>
                                <div class="o_row">
                                    <field name="weekends_daily_fee" widget="monetary"/>
                                </div>
                            </group>
                            <group attrs="{'invisible': [('converted_wage_type', '=', 'monthly')]}"></group>
                            <group string="Holiday Rate:" attrs="{'invisible': [('converted_wage_type', '=', 'monthly')]}">
                                <label for="holiday_fee" string="Hourly Rate"/>
                                <div class="o_row">
                                    <field name="holiday_fee" widget="monetary"/>
                                </div>
                                <label for="holiday_daily_fee" string="Daily Fee"/>
                                <div class="o_row">
                                    <field name="holiday_daily_fee" widget="monetary"/>
                                </div>
                            </group>
                            <group></group>
                        </group>
                        <notebook>
                            <page string="WORKING TIME">
                                <field name="working_time" mode="tree">
                                    <tree>
                                        <field name="name" />
                                        <field name="day_type"/>
                                        <field name="dayofweek" />
                                        <field name="hour_from"/>
                                        <field name="hour_to" />
                                        <field name="break_hours" />
                                    </tree>
                                </field>
                            </page>
                            <page string="BENEFITS">
                                <field name="benefits_id" mode="tree">
                                    <tree editable="bottom">
                                        <field name="benefits_id"/>
                                        <field name="benefit_type"/>
                                        <field name="amount" widget="monetary" options="{'currency_field': 'currency'}"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="DEDUCTIONS">
                                <field name="deductions_id" mode="tree">
                                    <tree editable="bottom">
                                        <field name="deductions_id"/>
                                        <field name="deduction_type"/>
                                        <field name="amount" widget="monetary" options="{'currency_field': 'currency'}" />
                                    </tree>
                                </field>
                            </page>
                            <page string="OTHER INFORMATION">
                                <group>
                                    <field name="other_info"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="hr_china_employee_contracts_form" model="ir.ui.view">
            <field name="name">view.employee_contracts.form</field>
            <field name="model">hr_china.contract</field>
            <field name="arch" type="xml">
                <form string="Contract" edit="0">
                    <sheet>
                        <h1 style="width:50%%"><field name="name" readonly="1"/></h1>
                        <group style="width:50%%">
                            <field name="wage_type" readonly="1"/>
                            <field name="holiday_fee" readonly="1"/>
                            <field name="dayoff_deduction" readonly="1"/>
                            <field name="start_date" widget="date" readonly="1"/>
                            <field name="end_date" widget="date" readonly="1"/>
                        </group>
                        <group style="width:50%%">
                            <field name="monthly_fee" widget="monetary" readonly="1"/>
                            <field name="weekday_daily_fee" widget="monetary" readonly="1"/>
                            <field name="weekday_overtime_fee" widget="monetary" readonly="1"/>
                            <field name="weekend_overtime_fee" widget="monetary" readonly="1"/>
                            <field name="weekends_fee" widget="monetary" readonly="1"/>
                        </group>
                        <notebook>
                            <page string="WORKING TIME">
                                <field name="working_time">
                                    <tree create="false" delete="false" edit="false">
                                        <field name="name" />
                                        <field name="day_type"/>
                                        <field name="dayofweek" />
                                        <field name="hour_from"/>
                                        <field name="hour_to" />
                                        <field name="break_hours" />
                                    </tree>
                                </field>
                            </page>
                            <page string="BENEFITS">
                                <field name="benefits_id" mode="tree">
                                    <tree >
                                        <field name="benefits_id"/>
                                        <field name="benefit_type"/>
                                        <field name="amount" widget="monetary" options="{'currency_field': 'currency'}"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="DEDUCTIONS">
                                <field name="deductions_id" mode="tree">
                                    <tree >
                                        <field name="deductions_id"/>
                                        <field name="deduction_type"/>
                                        <field name="amount" widget="monetary" options="{'currency_field': 'currency'}" />
                                    </tree>
                                </field>
                            </page>
                            <page string="OTHER INFORMATION">
                                <group>
                                    <field name="other_info" readonly="1"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="hr_china_employee_benefits_form" model="ir.ui.view">
            <field name="name">view.employee_benefits.form</field>
            <field name="model">hr_china.employee_benefits</field>
            <field name="arch" type="xml">
                <form string="Benefits">
                    <sheet>
                        <group style="width:50%%">
                            <field name="benefits_id" />
                            <field name="benefit_type" />
                            <field name="amount" />
                            <field name="currency" widget="selection" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="hr_china_employee_deductions_form" model="ir.ui.view">
            <field name="name">view.employee_deductions.form</field>
            <field name="model">hr_china.employee_deductions</field>
            <field name="arch" type="xml">
                <form string="Benefits">
                    <sheet>
                        <group style="width:50%%">
                            <field name="deductions_id" />
                            <field name="deduction_type" />
                            <field name="amount" />
                            <field name="currency" widget="selection" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="hr_china_employee_working_time_form" model="ir.ui.view">
            <field name="name">view.employee_working_time.form</field>
            <field name="model">hr_china.employee_working_time</field>
            <field name="arch" type="xml">
                <form string="Benefits">
                    <sheet>
                        <group style="width:50%%">
                            <field name="name" />
                            <field name="day_type"/>
                            <field name="dayofweek" />
                            <field name="hour_from" widget="timepicker"/>
                            <field name="hour_to" widget="timepicker"/>
                            <field name="break_hours" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>